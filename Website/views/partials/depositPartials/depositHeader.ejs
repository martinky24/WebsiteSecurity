<div class="row justify-content-center">
    <div class="col-10">
        <div class="row">
            <span class="col-" id="username">
                <% if (username) { %>
                    User: <%= username %>
                  <% } %>
            </span>
            <span class="col- ml-auto" id="accountid">
                <% if (accountNumber) { %>
                    Account Number: <%= accountNumber %>
                  <% } %>
            </span>
        </div>
        <div class="row">
            <span class="col-">Balance:</span>
            <span id="balance" class="col">
                <% if (balance) { %>
                    <%= balance %>
                  <% } %>
            </span>
        </div>
    </div>
</div>