<div class="tab-pane fade in show active" id="deposit_info" role="tabpanel">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label for="account_number">Account Number</label>
                        <input id="account_number" required name="account_number" type="text" pattern="[0-9]{8,9}" minlength="8" maxlength="9" value="">
                    </div>
                    <div class="form-group col-12">
                        <label for="routing_number">Routing Number</label>
                        <input id="routing_number" required name="routing_number" type="text" pattern="[0-9]{8,9}" minlength="8" maxlength="9" value="">
                    </div>
                    <div class="form-group col-12">
                        <label for="check_number">Check Number</label>
                        <input id="check_number" required name="check_number" type="text" pattern="[0-9]{4,9}" minlength="4" maxlength="9" value="">
                    </div>
                    <div class="form-group col-12">
                        <label for="amount">Amount</label>
                        <input id="amount" required name="amount" type="number" step="any" pattern="[+]?[0-9]*[.,]?[0-9]+"
                            value="" min="0">
                    </div>
                </div>
            </div>
        </div>
    </div>