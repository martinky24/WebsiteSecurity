<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./../partials/head') %>
</head>

<body class="container">

    <header>
        <%- include ('./../partials/header') %>
    </header>

    <main>
        <h2 class="centerHeader">Deposits <%- include('./../partials/isSecureTitle.ejs') %></h2>
        <div class="container d-flex justify-content-center">
            <div class="bodyDiv">
                <div>
                    <span>Account Number: <%=account_number%></span><br>
                    <span>Account Balance: $<%=balance%></span>
                </div>
                <div class="depositNav text-center">
                    <h3 style="color: white">Deposit Info</h3>                                       
                </div>
                <form action="/deposits" method="POST">
                    <input type="hidden" name="to_account" value="<%=account_number%>">
                    <div class="form-group">
                        <label for="amount">Amount</label>
                        <input id="amount" class="form-control" required name="amount" type="number" step="any"
                            pattern="[+]?[0-9]*[.,]?[0-9]+" value="" min="0">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <%- include ('./../partials/footer') %>
    </footer>

</body>

</html>